<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-81dp">

    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="352dp"
        android:layout_height="71dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:text="Государственное бюджетное профессиональное образовательное учреждение Воронежской области «Борисоглебский техникум промышленных и информационных технологий». "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBTPIT"
        app:layout_constraintVertical_bias="0.005" />

    <ImageView
        android:id="@+id/imageBTPIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="56dp"
        android:text="Костин УП"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewContent"
        app:layout_constraintStart_toEndOf="@+id/imageBTPIT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <ImageButton
        android:id="@+id/imageShare"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:src="@android:drawable/ic_menu_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewContent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toStartOf="@+id/textViewContent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContent"
        app:layout_constraintVertical_bias="0.008" />

    <TextView
        android:id="@+id/textShare"
        android:layout_width="65dp"
        android:layout_height="21dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/imageShare"
        app:layout_constraintEnd_toStartOf="@+id/imageEye"
        app:layout_constraintStart_toEndOf="@+id/imageShare"
        app:layout_constraintTop_toTopOf="@+id/imageShare"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/amountLike"
        android:layout_width="71dp"
        android:layout_height="20dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="32dp"
        android:text="999"
        app:layout_constraintBottom_toBottomOf="@+id/imageLike"
        app:layout_constraintEnd_toStartOf="@+id/imageShare"
        app:layout_constraintStart_toEndOf="@+id/imageLike"
        app:layout_constraintTop_toTopOf="@+id/imageLike"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textEye"
        android:layout_width="43dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="2dp"
        android:text="999"
        app:layout_constraintBottom_toBottomOf="@+id/imageEye"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toEndOf="@+id/imageEye"
        app:layout_constraintTop_toTopOf="@+id/imageEye"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/imageEye"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="156dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewContent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="@+id/textViewContent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContent"
        app:layout_constraintVertical_bias="0.015"
        app:srcCompat="@android:drawable/ic_menu_view" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Назад"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageShare"
        app:layout_constraintVertical_bias="0.056" />

    <ImageButton
        android:id="@+id/imageLike"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="3dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/likeofff"
        tools:srcCompat="@drawable/likeofff" />

    <TextView
        android:id="@+id/textData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Только что"
        app:layout_constraintBottom_toTopOf="@+id/textViewContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toEndOf="@+id/imageBTPIT"
        app:layout_constraintTop_toBottomOf="@+id/textAuthor"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>