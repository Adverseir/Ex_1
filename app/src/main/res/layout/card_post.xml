<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

        tools:context=".MainActivity2"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="352dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Государственное бюджетное профессиональное образовательное учреждение Воронежской области «Борисоглебский техникум промышленных и информационных технологий». "
            app:layout_constraintTop_toBottomOf="@+id/imageBTPIT" />

        <ImageView
            android:id="@+id/imageBTPIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            app:layout_constraintHorizontal_bias="0.092"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="45dp"
            android:layout_marginTop="5dp"

            android:text="Костин УП"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewContent"
            app:layout_constraintStart_toEndOf="@+id/imageBTPIT"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.125" />

        <ImageButton
            android:id="@+id/imageShare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="160dp"
            android:layout_marginBottom="25dp"
            android:background="#00000000"
            android:src="@android:drawable/ic_menu_share"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textViewContent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="@+id/textViewContent"
            app:layout_constraintTop_toBottomOf="@+id/textViewContent"
            app:layout_constraintVertical_bias="0.009" />

        <TextView
            android:id="@+id/textShare"
            android:layout_width="65dp"
            android:layout_height="21dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="210dp"
            android:layout_marginBottom="25dp"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/imageShare"
            app:layout_constraintEnd_toStartOf="@+id/imageEye"
            app:layout_constraintStart_toEndOf="@+id/imageShare"
            app:layout_constraintTop_toTopOf="@+id/imageShare"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/amountLike"
            android:layout_width="71dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="25dp"

            android:text="999"
            app:layout_constraintBottom_toBottomOf="@+id/imageLike"
            app:layout_constraintEnd_toStartOf="@+id/imageShare"
            app:layout_constraintStart_toEndOf="@+id/imageLike"
            app:layout_constraintTop_toTopOf="@+id/imageLike"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textEye"
            android:layout_width="43dp"
            android:layout_height="22dp"
            android:text="999"
            android:layout_gravity="bottom"
            android:layout_marginLeft="335dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageEye"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toEndOf="@+id/imageEye"
            app:layout_constraintTop_toTopOf="@+id/imageEye"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/imageEye"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="285dp"
            android:layout_marginBottom="25dp"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textViewContent"
            app:layout_constraintHorizontal_bias="0.87"
            app:layout_constraintStart_toStartOf="@+id/textViewContent"
            app:layout_constraintTop_toBottomOf="@+id/textViewContent"
            app:layout_constraintVertical_bias="0.015"
            app:srcCompat="@android:drawable/ic_menu_view" />


        <ImageButton
            android:id="@+id/imageLike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="30dp"
            android:background="#00000000"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewContent"
            app:layout_constraintVertical_bias="0.003"
            app:srcCompat="@drawable/likeofff" />

        <TextView
            android:id="@+id/textData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110dp"
            android:text="Только что"
            app:layout_constraintBottom_toTopOf="@+id/textViewContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.033"
            app:layout_constraintStart_toEndOf="@+id/imageBTPIT"
            app:layout_constraintTop_toBottomOf="@+id/textAuthor"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/removeById"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/more"></ImageButton>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>